<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Almanakka">
        <item name="weekdayTextAppearance">@style/Almanakka.TextAppearance.Weekday</item>
        <item name="weekdayDisabledTextAppearance">@style/Almanakka.TextAppearance.Disabled</item>
        <item name="weekdaySelectedTextAppearance">@style/Almanakka.TextAppearance.Selected</item>
        <item name="weekdayOfDifferentMonthTextAppearance">
            @style/Almanakka.TextAppearance.DifferentMonth
        </item>
        <item name="saturdayTextAppearance">@style/Almanakka.TextAppearance.Saturday</item>
        <item name="saturdayDisabledTextAppearance">@style/Almanakka.TextAppearance.Disabled</item>
        <item name="saturdaySelectedTextAppearance">@style/Almanakka.TextAppearance.Selected</item>
        <item name="saturdayOfDifferentMonthTextAppearance">
            @style/Almanakka.TextAppearance.DifferentMonth
        </item>
        <item name="sundayTextAppearance">@style/Almanakka.TextAppearance.Sunday</item>
        <item name="sundayDisabledTextAppearance">@style/Almanakka.TextAppearance.Disabled</item>
        <item name="sundaySelectedTextAppearance">@style/Almanakka.TextAppearance.Selected</item>
        <item name="sundayOfDifferentMonthTextAppearance">
            @style/Almanakka.TextAppearance.DifferentMonth
        </item>

        <item name="weekdayLabelTextAppearance">@style/Almanakka.TextAppearance.Weekday</item>
        <item name="saturdayLabelTextAppearance">@style/Almanakka.TextAppearance.Saturday</item>
        <item name="sundayLabelTextAppearance">@style/Almanakka.TextAppearance.Sunday</item>

        <item name="monthLabelTextAppearance">@style/Almanakka.TextAppearance.MonthLabel</item>

        <item name="selectionProvider">normal</item>
    </style>

    <style name="Almanakka.Scroll">
        <item name="mode">scroll</item>
    </style>

    <style name="Almanakka.Scroll.TapRange">
        <item name="selectionProvider">tapRange</item>
    </style>

    <style name="Almanakka.Scroll.SlideRange">
        <item name="selectionProvider">slideRange</item>
    </style>

    <style name="Almanakka.Pager">
        <item name="isShowDaysOfDifferentMonth">true</item>

        <item name="mode">pager</item>
    </style>

    <style name="Almanakka.TextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Almanakka.TextAppearance.Weekday">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Almanakka.TextAppearance.Saturday">
        <item name="android:textColor">@color/saturday</item>
    </style>

    <style name="Almanakka.TextAppearance.Sunday">
        <item name="android:textColor">@color/sunday</item>
    </style>

    <style name="Almanakka.TextAppearance.Selected">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Almanakka.TextAppearance.Disabled">
        <item name="android:textColor">@color/gray400</item>
    </style>

    <style name="Almanakka.TextAppearance.DifferentMonth">
        <item name="android:textColor">@color/gray500</item>
    </style>

    <style name="Almanakka.TextAppearance.MonthLabel">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>